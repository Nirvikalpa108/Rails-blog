<div class="container">
  <h1>Find cooks near you</h1>
</div>

<div class="container">
  <%= link_to 'Home', root_path %>
</div>

<div class="container">
  <table>
    <thead>
    <tr>
      <th>Name</th>
      <th>Cuisine</th>
      <th>City</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>

    <%@cooks.each do |cook| %>
    <tr>
      <td><%=cook.name%></td>
      <td><%=cook.cuisine%></td>
      <td><%=cook.city%></td>
    </tr>
    <%end%>

    </tbody>
  </table>
</div>

<div class="container">
  <%= link_to 'New cook', new_cook_path %>
</div>